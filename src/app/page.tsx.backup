    const diffTime = Math.abs(end.getTime() - start.getTime());
    return Math.ceil(diffTime / (1000 * 60 * 60 * 24));
  };

  const calculatePhaseAchievementSummary = (phase: any) => {
    const totalTasks = phase.tasks.length;
    if (totalTasks === 0) return { completed: 0, overdue: 0, inProgress: 0, notStarted: 0 };
    
    let totalCompleted = 0;
    let totalOverdue = 0;
    let totalInProgress = 0;
    let totalNotStarted = 0;
    
    phase.tasks.forEach((task: any) => {
      const achievements = task.achievements || { completed: 0, overdue: 0, inProgress: 0, notStarted: 0 };
      totalCompleted += Math.min(100, achievements.completed || 0);
      totalOverdue += Math.min(100, achievements.overdue || 0);
      totalInProgress += Math.min(100, achievements.inProgress || 0);
      totalNotStarted += Math.min(100, achievements.notStarted || 0);
    });
    
    // Calculate averages and cap at 100%
    const avgCompleted = totalTasks > 0 ? Math.min(100, Math.round((totalCompleted / totalTasks))) : 0;
    const avgOverdue = totalTasks > 0 ? Math.min(100, Math.round((totalOverdue / totalTasks))) : 0;
    const avgInProgress = totalTasks > 0 ? Math.min(100, Math.round((totalInProgress / totalTasks))) : 0;
    const avgNotStarted = totalTasks > 0 ? Math.min(100, Math.round((totalNotStarted / totalTasks))) : 0;
    
    return {
      completed: avgCompleted,
      overdue: avgOverdue,
      inProgress: avgInProgress,
      notStarted: avgNotStarted
    };
  };

  
  
  
